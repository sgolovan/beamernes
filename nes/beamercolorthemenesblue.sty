\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemenesblue}[2020/09/28 New Economic School color theme with blue background]
\RequirePackage{pgfopts}

\usecolortheme{metropolis}

\pgfkeys{
  /metropolis/color/background/.cd,
    .is choice,
    dark/.code=\nes@colors@dark,
    light/.code=\nes@colors@light,
}
\providecommand{\nes@color@setdefaults}{
  \pgfkeys{/metropolis/color/.cd,
    block=fill,
  }
}
% Pantone 485, CMYK 0,100,100,0, RGB 223,0,26
\definecolor{nesred}{rgb}{0.8745,0,0.1020}

% Pantone 293, CMYK 100,60,0,0, RGB 0,87,165
\definecolor{nesblue}{rgb}{0,0.3412,0.6471}

% Pantone Process Black, CMYK 0,0,0,100, RGB 0,0,0
\definecolor{nesblack}{rgb}{0,0,0}

% Pantone Process Black 55%, CMYK 0,0,0,55, RGB 138,138,142
\definecolor{nesblack55}{rgb}{0.5412,0.5412,0.5569}

% Pantone Process Black 80%, CMYK 0,0,0,80, RGB 80,78,83
\definecolor{nesblack80}{rgb}{0.3137,0.3059,0.3255}

% Pantone White, CMYK 0,0,0,0, RGB 255,255,255
\definecolor{neswhite}{rgb}{1,1,1}

\def\nes@biglogopalette{mono}
\def\nes@biglogocolor{white}
\def\nes@smalllogopalette{color}
\def\nes@smalllogocolor{black}

\setbeamercolor{normal text}{%
  fg=neswhite,
  bg=nesblue
}
\providecommand{\nes@colors@dark}{}
\providecommand{\nes@colors@light}{}
\setbeamercolor{alerted text}{%
  fg=nesred!80!neswhite
}
\setbeamercolor{example text}{%
  fg=nesblack55!50!neswhite
}
\setbeamercolor{palette primary}{%
  use=normal text,
  fg=nesblack,
  bg=neswhite
}
\setbeamercolor{item}{%
  fg=neswhite
}
\renewcommand{\metropolis@block@fill}{
  \setbeamercolor{block title}{%
    use=normal text,
    fg=normal text.fg,
    bg=normal text.bg!80!neswhite
  }
  \setbeamercolor{block body}{
    use={block title, normal text},
    bg=normal text.bg!90!neswhite
  }
}
\nes@color@setdefaults
\ProcessPgfPackageOptions{/metropolis/color}
\mode<all>
\endinput

